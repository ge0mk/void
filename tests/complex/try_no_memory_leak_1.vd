import std/core;

struct Foo {
	var counter: &&int;

	func constructor(this: &&Foo, counter: &&int) {
		this.counter := &&counter;
		this.counter++;
	}

	func constructor(this: &&Foo, other: Foo) {
		this.counter := &&other.counter;
		this.counter++;
	}

	func destructor(this: &&Foo) {
		this.counter--;
	}
}

func foo() -> Result!<int, int> {
	throw 0;
}

func bar(a: Foo, b: int) {}

func baz(counter: &&int) -> Result!<void, int> {
	bar(Foo(&&counter), try foo());
	return Ok;
}

func main() {
	var counter = 0;
	const r = baz(&&counter);
	assert(r is Error);
}
