import std/core;
import std/io;
import std/format;
import std/string;

variant Foo {
	case A;
	case B: bool;
	case C: byte;

	var x: int;
	var y: int;
}

func main() {
	var a: Foo = Foo::A(1, 2);
	assert(a is A);
	println(format(a.x));
	println(format(a.y));
	assert(a.x == 1);
	assert(a.y == 2);

	a.x += 2;
	assert(a.x == 3);

	var b: Foo = Foo::B(true, 0, 0);
	match b {
		case B: v -> {
			assert(v);
		}
		else -> {
			assert(false);
		}
	}
}
