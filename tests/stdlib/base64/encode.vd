import std/core;
import std/string;
import std/base64;

func main() {
	assert(encode("light work.") == "bGlnaHQgd29yay4=");
	assert(encode("light work") == "bGlnaHQgd29yaw==");
	assert(encode("light wor") == "bGlnaHQgd29y");
	assert(encode("light wo") == "bGlnaHQgd28=");
	assert(encode("light w") == "bGlnaHQgdw==");
}
